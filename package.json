		"start:topup": "cd topup && npm start",
		"start:frontend": "cd front-end && npm run dev",
		
		"start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:auth\" \"npm run start:accounts\" \"npm run start:transactions\" \"npm run start:users\" \"npm run start:statements\" \"npm run start:crypto\" \"npm run start:topup\" \"npm run start:frontend\"",
		
		"install": "npm run install:all",
		"start": "npm run start:all"
