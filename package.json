	"description": "microservices-systems",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		
		"install:api-gateway": "cd api-gateway && npm install",
		"install:auth": "cd auth && npm install",
		"install:statements": "cd statements && npm install",
		"install:accounts": "cd accounts && npm install",
		"install:crypto": "cd crypto-service && npm install",
		"install:users": "cd users && npm install",
		"install:topup": "cd topup && npm install",
		"install:frontend": "cd front-end && npm install",
		"install:all": "npm run install:api-gateway && npm run install:auth && npm run install:accounts && npm run install:users && npm run install:statements && npm run install:crypto && npm run install:topup && npm run install:frontend",

		"start:api-gateway": "cd api-gateway && npm start",
		"start:auth": "cd auth && npm start",
